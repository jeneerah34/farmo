    <h1 class="profileh2">Farmer Details</h1>

    <div class="profileContainer">
        <div id="info" class="profileInfo">
            <div id="profileDetials" class="profileInputs">
                <label for="fullname">Full Name  </label>
                <p class="detials"><%= userData.fullname  %></p>
            </div>
            <div id="profileDetials" class="profileInputs">
                <label for="email">Email  </label>
                <p class="detials"><%= userData.email  %></p>    
            </div>
            <div id="profileDetials" class="profileInputs">
                <label for="phone">Phone  </label>
                <p id="phone" class="detials"><%= userData.phone%></p>    
            </div>
            <div id="profileDetials" class="profileInputs">
                <label for="state">State  </label>
                <p class="detials"><%= userData.state  %></p>
            </div>
            <div id="profileDetials" class="profileInputs">
                <label for="district">District  </label>
                <p class="detials"><%= userData.district  %></p>    
            </div>
            <div id="profileDetials" class="profileInputs">
                <label for="address">Address  </label>
                <p id="address" class="detials"><%= userData.address  %></p>    
            </div>
        </div>
    </div>
    <h1 class="profileh2"> Product Details </h1>
    <div class="showProduct">
        <div class="img" style=" background-image: url(<%=p.image%>);
    background-position: center;
    background-repeat: no-repeat;
    background-size:cover;"></div>
    </div>

    <div class="profileContainer1">
        <div id="info" class="profileInfo">
            <div id="profileDetials" class="profileInputs">
                <label for="Product ">Product Name  </label>
                <p class="detials"><%= p.Name %></p>
            </div>
            <div id="profileDetials" class="profileInputs">
                <label for="email">Price  </label>
                <p class="detials"><%= p.min %> kg <%= p.price  %>/-</p>    
            </div>
            <div id="profileDetials" class="profileInputs">
                <label for="state">InStock  </label>
                <p class="detials"><%= p.stock  %> kg</p>
            </div>
        </div>
    </div>
    <h1 class="profileh2"> Enter your requirement </h1>
    <form action="/buy/product/<%=userData._id%>/<%=p._id%>" method="post" >
        <div class="profileContainer3">
            <div class="profileInfo">
                <div class="profileInputs">
                    <label for="quantity">Quantity  :</label>
                    <input min="<%=p.min%>" max="<%=p.stock%>" type="Number" id="quantity" required   name="quantity">    
                </div>
                <div class="button">
                    <button type="button" onclick="location.href='/home'" id="profileButton">Back</button>
                    <button type="sumbit" onclick="location.href='/'"  id="profileButton">Submit</button>
                </div>
            </div>
        </div>
    </form>

