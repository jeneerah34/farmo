    <h2 class="profileh2">Update Your Profile</h2>
    <form action="/profile/edit/<%=userData._id%>?_method=PUT" method="post" >
        <div class="profileContainer">
            <div class="profileInfo">
                <div class="profileInputs">
                    <label for="fullname">Full Name :</label>
                    <input type="text" id="fullname" required value="<%= userData.fullname %>" name="fullname">    
                </div>
                <div class="profileInputs">
                    <label for="email">Email     :</label>
                    <input type="email" id="email"  required value="<%= userData.email %>" name="email">    
                </div>
                <div class="profileInputs">
                    <label for="phone">Phone     :</label>
                    <input type="text" maxlength="10" title="Error" pattern="[1-9]{1}[0-9]{9}"  id="phone"  required value="<%= userData.phone %>" name="phone">    
                </div>
                <div class="profileInputs">
                    <label for="state">State     :</label>
                    <input type="text" id="state" required value="<%= userData.state %>" name="state">    
                </div>
                <div class="profileInputs">
                    <label for="district">District  :</label>
                    <input type="text" id="district" required value="<%= userData.district %>" name="district">    
                </div>
                <div class="profileInputs">
                    <label for="address">Address   :</label>
                    <input type="textbox" name="address" required value="<%= userData.address %>" id="address">    
                </div>
                <div class="button">
                    <button type="button" onclick="location.href='/profile'" id="profileButton">Back</button>
                    <button id="profileButton">Submit</button>
                </div>
            </div>
        </div>
    </form>

